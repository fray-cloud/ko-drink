FROM node:20-alpine

WORKDIR /app

ARG NODE_ENV=development

COPY package.json .
COPY package-lock.json .

# npm install은 플랫폼별 optional dependencies를 자동으로 선택합니다
# npm ci는 lock 파일을 엄격하게 따르므로 플랫폼 불일치가 발생할 수 있습니다
RUN npm install

COPY . .

EXPOSE 3000

CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
